<Window x:Class="SFolder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfAnnotationExtractor"
        mc:Ignorable="d"
        Title="SFolder" Height="450" Width="470">
    <Window.Resources>
        <ResourceDictionary Source="/WPF/Resource/Styles.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>      

        <Grid>
            <GroupBox Header="Exceptions" Margin="10">
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                    <StackPanel>
                        <Button HorizontalAlignment="Center" Content="Extract Annotations" Command="{Binding ExtractCommand}" Width="180"  FontWeight="Bold" Style="{DynamicResource ButtonStyle}"/>
                        <DockPanel>
                            <TextBox Text="{Binding PdfPath}" Width="300" Focusable="False" Style="{DynamicResource TextBoxStyle}"/>
                            <Button Content="Browse PDF" Command="{Binding BrowseCommand}" Style="{DynamicResource ButtonStyle}" Width="100"  FontWeight="Bold"/>
                        </DockPanel>                        
                        <TextBlock Text="***How to use***" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
