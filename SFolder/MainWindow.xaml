<Window x:Class="SFolder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RevisionFileUpdater.ViewModels"
        Title="Revision File Updater"
        Height="420" Width="550"
        ResizeMode="NoResize">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary Source="/WPF/Resource/Styles.xaml" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <!-- Source -->
        <TextBox Grid.Row="0"
                 Text="{Binding SourcePath,
                        UpdateSourceTrigger=PropertyChanged}"
                 Height="32"
                 Margin="0,0,10,10"/>

        <Button Grid.Row="0"
                Grid.Column="1"
                Height="24"
                Content="Source"
                Command="{Binding BrowseSourceCommand}"
                Margin="0,0,0,10"/>

        <!-- Target -->
        <TextBox Grid.Row="1"
                 Height="32"
                 Text="{Binding TargetPath,
                        UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,10,10"/>

        <Button Grid.Row="1"
                Grid.Column="1"
                Height="24"
                Content="Target"
                Command="{Binding BrowseTargetCommand}"
                Margin="0,0,0,10"/>

        <!-- Execute -->
        <Button Grid.Row="2"
                Grid.ColumnSpan="2"
                Content="Execute"
                Height="32"
                HorizontalAlignment="Left" Margin="220,0,0,0"
                Command="{Binding ExecuteCommand}"/>
        
        <Button Content="Add Target"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left"
                Height="32"
        Command="{Binding AddTargetCommand}" />

        <Button Content="Clear"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left" Margin="110,0,0,0"
                Height="32"
        Command="{Binding RemoveSelectedTargetCommand}" />

        <Button Content="PDF/DWG"
        Grid.Row="2"
        Grid.ColumnSpan="2"
        HorizontalAlignment="Left" Margin="330,0,0,0"
        Height="32"
        Command="{Binding CheckPdfDwgCommand}"/>


        <StackPanel Grid.Row="5" Grid.ColumnSpan="3">
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                <StackPanel>
                    <ScrollViewer>
                        <ListBox ItemsSource="{Binding MultiTargetPaths}"
         SelectedItem="{Binding SelectedMultiTarget}"
         Height="100"
         Margin="0,5"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>            
        </StackPanel>
    </Grid>
</Window>