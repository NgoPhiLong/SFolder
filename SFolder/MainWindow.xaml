<Window x:Class="SFolder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfAnnotationExtractor"
        mc:Ignorable="d"
        Title="SFolder" Height="450" Width="470">
    <Window.Resources>
        <ResourceDictionary Source="/WPF/Resource/Styles.xaml" />
    </Window.Resources>
    <TabControl>
        <TabItem Header="Update Revision">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="250"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Source Folder:" Grid.Row="0"/>
                <TextBox Text="..." Grid.Row="0" Grid.Column="1"/>
                <Button Content="..." Grid.Row="0" Grid.Column="2"/>
                
                <TextBlock Text="Target Folder:" Grid.Row="1"/>
                <TextBox Text="..." Grid.Row="1" Grid.Column="1"/>
                <Button Content="..." Grid.Row="1" Grid.Column="2"/>


                <StackPanel Grid.Row="2" Grid.ColumnSpan="3">
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                        <StackPanel>
                            <Button HorizontalAlignment="Center" Content="Add Multi Target Folder" Command="{Binding ExtractCommand}" Width="180"  FontWeight="Bold"/>
                            <ScrollViewer>
                                <TextBox Text="{Binding PdfPath}" Width="400" Height="200" Focusable="False"/>
                            </ScrollViewer>                                                      
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Button Content="Combine" Grid.Row="3" Grid.Column="2"/>

                <!--<StackPanel Grid.Row="3" Grid.ColumnSpan="3">
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                        <StackPanel>
                            <Button HorizontalAlignment="Center" Content="Extract Annotations" Command="{Binding ExtractCommand}" Width="180"  FontWeight="Bold"/>
                            <DockPanel>
                                <TextBox Text="{Binding PdfPath}" Width="300" Focusable="False"/>
                                <Button Content="Browse PDF" Command="{Binding BrowseCommand}" Width="100"  FontWeight="Bold"/>
                            </DockPanel>
                        </StackPanel>

                    </Border>


                </StackPanel>-->
            </Grid>
            
        </TabItem>
    </TabControl>
    
</Window>
